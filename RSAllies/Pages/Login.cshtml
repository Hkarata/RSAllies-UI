@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<partial name="Shared/_StatusMessage" for="StatusMessage"/>
<div class="container-fluid english">
    
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <img src="images/logo.svg" alt="logo" style="width: 35%"/>
                    </div>
                    <form class="loginForm" method="post">
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input class="form-control" asp-for="Login!.Phone" type="tel"/>
                            <span asp-validation-for="Login!.Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Password</label>
                            <input class="form-control" type="password" asp-for="Login!.Password"/>
                            <span asp-validation-for="Login!.Password" class="text-danger"></span>
                        </div>
                        <input type="hidden" name="submittedForm" value="English">
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid swahili" style="display: none">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <img src="images/logo.svg" alt="logo" style="width: 35%"/>
                    </div>
                    <form class="loginForm" method="post">
                        <div class="mb-3">
                            <label class="form-label">Namba ya Simu</label>
                            <input class="form-control" asp-for="SLogin!.Phone" type="tel"/>
                            <span asp-validation-for="SLogin!.Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Nywila</label>
                            <input class="form-control" type="password" asp-for="SLogin!.Password"/>
                            <span asp-validation-for="SLogin!.Password" class="text-danger"></span>
                        </div>
                        <input type="hidden" name="submittedForm" value="Swahili">
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="~/images/wip.gif" width="75" height="75"/>
                <p>
                    <span class="english">Please wait while we log you in...</span>
                    <span class="swahili" style="display: none">Tafadhali subiri...</span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            // Submit button click event handler
            $(".loginForm").submit(function (event) {
                

                // Show the loading modal
                $("#loadingModal").modal("show");

                $('body').css('pointer-events', 'none')
            });
        });
    </script>
}