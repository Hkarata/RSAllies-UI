@using RSAllies.Extensions
@inject  SessionChecker SessionChecker

@if (SessionChecker.Check())
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Home">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Booking/Index">Booking</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Booking/Search">Find a Session</a>
        </li>
    </ul>
}
else
{
    
    <ul class="navbar-nav flex-grow-1">
        
    </ul>
    
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
        </li>
        <!-- Example split danger button -->
        <div class="btn-group">
            <button type="button" class="btn btn-danger">Language</button>
            <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li style="cursor: pointer"><span class="dropdown-item language" >English</span></li>
                <li style="cursor: pointer"><span class="dropdown-item language" >Swahili</span></li>
            </ul>
        </div>
    </ul>
    
